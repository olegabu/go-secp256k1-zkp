{
  "llvm-target": "wasm32--wasi",
  "build-tags": ["tinygo.wasm"],
  "goos": "js",
  "goarch": "wasm",
  "linker": "wasm-ld",
  "libc": "wasi-libc",
  "cflags": [
    "--target=wasm32--wasi",
    "--sysroot={root}/lib/wasi-libc/sysroot",
    "-Oz"
  ],
  "ldflags": [
    "--allow-undefined",
    "--no-demangle",
    "--import-memory",
    "--initial-memory=134217728",
    "--max-memory=134217728",
    "-zstack-size=65536",
    "--global-base=6560",
    "--export-all"
  ],
  "wasm-abi": "js",
  "emulator": ["node", "targets/wasm_exec.js"]
}

}